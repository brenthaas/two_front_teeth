<div class="user_form" >
  <%= form_for @user, :builder => LabeledFormBuilder do |f| %>
    <%= content_tag :div, class: "inputs" do %>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      <%= f.text_field :email %>
    <% end %>

    <div class="actions">
      <%= f.button :submit, value: 'Create' %>
    </div>
  <% end %>
</div>